<h5>訪問履歴の編集</h5>
<div class="send">
   <%= form_for @visit, url: visit_path do |f| %>
    <div class="field">
      <%= f.label :customer, "顧客名" %>
      <%= f.text_field :customer, placeholder: "○○邸" ,class: 'text' %>
    </div>

    <div class="field">
      <%= f.label :appointment, "アポイント" %>
      <%= f.text_field :appointment, placeholder: "3/1 Aアポ" ,class: 'text' %>
    </div>

    <div class="field">
      <%= f.label :visit, "訪問日" %>
      <%= f.text_field :visit, placeholder: "4/1 9時訪問" ,class: 'text' %>
    </div>

    <div class="field">
      <%= f.label :contract, "成約" %>
      <%= f.text_field :contract, placeholder: "4/5 成約" ,class: 'text' %>
    </div>

    <div class="field">
      <%= f.label :contract, "memo" %>
      <%= f.text_field :note, placeholder: "メモを入力" ,class: 'text' %>
    </div>

    <div class="field wrap">
      <input type="submit" class="btn btn-primary" value="更新する" >
    </div>
  <% end %>
</div> 