<%= render 'layouts/header' %>

<% if user_signed_in? && @area.user == current_user %>
  <div class="title">
    <div class="sample_image">
      <img src= <%= user_iamge(@user)%> class="icon_image">
    </div>
    <h2><%= current_user.username %>さんのテリトリ―</h2>
  </div>
  <div class="visit_save">
    <%= link_to "訪問履歴の登録", visit_new_path %>
  </div>
<% end %>

<% if @area.status == 1 %>

<h4 class="month">6ヶ月テリ</h4>

<div class="main">
  <div class="city">
    <%= @area.ward %> 
    <%= @area.town %>
    <%= "#{@area.city_block}丁目" %>
    <time datetime="<%= @area.created_at %>">
      <%= time_ago_in_words(@area.created_at) %>
    </time>
  </div>
  <div class="vusit">
    <ul>
      <% @visits.each do |visit| %> 
        <li>
          <%= visit.customer %>
          <%= visit.appointment %>
          <%= visit.contract %>
          <%= visit.note %> 
          <time datetime="<%= visit.created_at %>">
            <%= time_ago_in_words(visit.created_at) %>
          </time>
          <%= link_to "編集", edit_visit_path(visit) %>
        </li>
      <% end %> 
    </ul>   
  </div> 
</div>
<% end %>

