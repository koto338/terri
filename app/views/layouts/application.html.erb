<!DOCTYPE html>
<html>
  <head>
    <title>Terri</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/dc66eed749.js" crossorigin="anonymous"></script>
    <%= render 'layouts/shim' %> 
  </head>

  <body>
    <div class="footerFixed">
      <div class="container">
        <%= render 'layouts/error_messages' %>
        <%= yield %>
      </div>
      <%= render 'layouts/footer' %>
    </div>

    <script>
      window.setTimeout(function() {
        $(".alert").slideUp();
        }, 3000);
    </script> 

    <script type="text/javascript">
      $(function() {
        // クリックでモーダルオープン
        $('.trigger').on('click', function() {
          $('#modal').modal('show');
        }); 
          // 直接入力
        $("#town").on('input', function(){
          var area = $('#area option:selected').text("");
          var town = $('#town').val()
          if (town!=="") {
            $('#input').val(town);
          };
        });
        // DBから選択
        $('#area').change(function() {
          var town = $('#town').val("")
          var area = $('#area option:selected').text();
          if (town!=="") {
            console.log(area);
            $('#input').val(area);
          }
        });
      });
    </script>   
  </body>
</html>
