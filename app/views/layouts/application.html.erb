<!DOCTYPE html>
<html>
  <head>
    <title>Terri</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/dc66eed749.js" crossorigin="anonymous"></script>
    <%= render 'layouts/shim' %> 
  </head>

  <body>
    <div class="footerFixed">
      <div class="container">
        <%= render 'layouts/error_messages' %>
        <%= yield %>
      </div>
      <%= render 'layouts/footer' %>
    </div>

    <script>
      window.setTimeout(function() {
        $(".alert").slideUp();
        }, 3000);
    </script> 

    <script type="text/javascript">
      $(function() {
        // クリックでモーダルオープン
        $('.trigger').on('click', function() {
          $('#modal').modal('show');
        });
    
        $("#add").click(function(){
          // 直接入力
          var town = $('#town').val();
          console.log(town);
          $('#input').val(town);

          // DBから選択
          var area = $('#area option:selected').text();
          console.log(area);
          $('#input').val(area);
        });   
      });
    </script>   
  </body>
</html>
