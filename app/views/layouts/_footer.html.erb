<% if user_signed_in? %>
  <div class="footer d-flex justify-content-between">
    <%= link_to root_path do %>
      <button type="button" class="btn-lg col-15"><i class="fas fa-home fa-3x"></i>
       <div class="bottom_btn">ホーム</div></button>
    <% end %>
        
    <%= link_to edit_user_registration_path do %>
      <button type="button" class="btn-lg col-15"><i class="fas fa-user-cog fa-3x"></i>
      <div class="bottom_btn">設定</div></button>
    <% end %>
        
    <%= link_to new_area_path do %>
      <button type="button" class="btn-lg col-15"><i class="fas fa-map-marker-alt fa-3x"></i>
       <div class="bottom_btn">テリ登録</div></button>
    <% end %>
        
    <%= link_to search_path do %>
      <button type="button" class="btn-lg col-15"><i class="fas fa-search fa-3x"></i>
       <div class="bottom_btn">検索</div></button>
    <% end %>
        
    <%=link_to user_show_path(@user) do %>
      <button type="button" class="btn-lg col-15"><i class="fas fa-user-friends fa-3x"></i>
       <div class="bottom_btn">ユーザー</div></button>
    <% end %>
  </div>
<% end %>