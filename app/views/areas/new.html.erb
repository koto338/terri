        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="Modal">町名を選択</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <%= f.label :town, "町村" %>
            <%= f.select :town, Area.all.map{|t| [t.town, t.town]}, include_blank: '町名を選択' %>
            <%= f.text_field :town, placeholder: "なければここに入力" ,class: 'text' %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <button type="button" class="btn btn-primary">保存</button>
          </div>
        </div>
      </div>
    </div> 
 
<%
=end%>

    <div class="field city_block">
      <%= f.label :city_block, "番地" %>
      <%= f.select :city_block, (1..9).to_a, { include_blank: '選択' }, { class: 'select'} %>
      <span>丁目</span>
    </div>

    <div class="status"> 
      <%= f.label :status_1, "6ヶ月テリ" %>
      <%= f.radio_button :status, "1" %>
      
      <%= f.label :status_2, "訳テリ" %>
      <%= f.radio_button :status, "2" %>
    </div>

    <div class="field wrap">
      <input type="submit" class="btn btn-primary" value="登録する", data-confirm="テリに登録しますか？"  >
    </div>
  <% end %>
</div> 
