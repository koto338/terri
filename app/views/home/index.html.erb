<%= render 'layouts/header' %>
<div class="title">
  <div class="sample_image">
   <img src= <%= user_iamge(@user)%> class="icon_image">
  </div>
  <h1 calss="col-2"><%= current_user.username %>さんのテリ</h1>
</div>

<% if @user_areas.blank? %>
<div class="message">
  <h3 class="col-3">テリを登録してみよう！</h3>
  <div class="icon">
    <i class="fas fa-angle-double-down fa-5x faa-shake animated" style="color: #ffff33;"></i>
  </div>
</div>

<% else %>
<h4 class="month">6ヶ月</h4>
<div class="main">
  <ul>
    <% @user_areas.each do |area| %>
      <% if area.status == 1 %>
      <li class="city">
        <%= area.ward %>
        <%= area.town %>
        <%= "#{area.city_block}丁目" %>

        <time datetime="<%= area.created_at %>">
          <%= time_ago_in_words(area.created_at) %>
        </time>
    
        <%= link_to visit_path(area) do %>
          <i class="far fa-edit"></i>
　　　 　<% end %>

          <%= link_to area_update_path(area.id, metod: :post) do %>
            <i class="fas fa-car-side">このテリから離れる</i>
          <% end %>
       
        <% end %>
      <% end %>
  </ul>
</div>

<h4 class="month">特別</h4>
<div class="main">
  <ul>
    <% @user_areas.each do |area| %>
      <% if area.status == 2 %>
      <li class="city">
        <%= area.ward %>
        <%= area.town %>
        <%= "#{area.city_block}丁目" %>

        <time datetime="<%= area.created_at %>">
          <%= time_ago_in_words(area.created_at) %>
        </time>
    
        <%= link_to visit_path(area) do %>
          <i class="far fa-edit"></i>
        <% end %>

        <%= link_to area_update_path(area.id, metod: :post) do %>
          手放す<i class="fas fa-car-side"></i>
        <% end %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
<% end %>
